import java.util.*;

class matrix{
	public static void main(String args[]){

		matrix_multiplication matrix_obj = new matrix_multiplication();

		Scanner scn = new Scanner(System.in);

		// Matrix A
		System.out.println("Enter the values of Matrix A: ");
		
		for(int i=0; i<matrix_obj.multi_matrix_one.length; i++){
		 for(int j=0; j<matrix_obj.multi_matrix_one[i].length; j++)
		   {
		     System.out.println("Matrix Values of A: ");
		     matrix_obj.multi_matrix_one[i][j]= scn.nextInt();
		   }
		}

	      // Matrix B
	      System.out.println("Enter values of Matrix B: ");

	      for(int k=0; k<matrix_obj.multi_matrix_two.length; k++){
		for(int l=0; l<matrix_obj.multi_matrix_two[k].length; l++){
		  System.out.println("Matrix Values of B: ");
		  matrix_obj.multi_matrix_two[k][l] = scn.nextInt();
		}
	      } 

	    // Multiplication of Matrix A and B
	    int[][] product = new int[matrix_obj.multi_matrix_one.length][matrix_obj.multi_matrix_two[0].length];

	    for(int m=0; m<matrix_obj.multi_matrix_one.length; m++){
	     for(int n=0; n<matrix_obj.multi_matrix_two[0].length; n++){
	      for(int o=0; o<matrix_obj.multi_matrix_one[0].length; o++){
		  product[m][n] += matrix_obj.multi_matrix_one[m][o] * matrix_obj.multi_matrix_two[o][n];
	       } 
	      }
	    }

	   // Result of Product
	   for(int p=0; p<product.length; p++){
	     for(int q=0; q<product[p].length; q++){
		System.out.print(product[p][q]+ " ");
	     }
	     System.out.println();
	   }
	
	  scn.close();

	}
}

class matrix_multiplication{
	int[][] multi_matrix_one = new int[2][2];
	int[][] multi_matrix_two = new int[2][2];
}
